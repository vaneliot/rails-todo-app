<h1>Edit Task</h1>
 
<%= form_with method: :put, scope: :task, url: update_task_path, local: true do |f| %>
    <p>
        <% if @task.errors.any? %>
            <ul>
                <% @task.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>
            </ul> 
        <% end %>
    </p>
    <p> 
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
 
<%= link_to 'Back', tasks_path %>