<h1>Create New Category</h1>

<%= render 'form' %>

<%= link_to 'Back to categories', categories_path %>

<% if false %>
    <%= form_with scope: :category, url: create_category_path, local: true do |f| %>
        <p>
            <% if @category.errors.any? %>
                <ul>
                    <% @category.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                    <% end %>
                </ul> 
            <% end %>
        </p>
        <p> 
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
        <p>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
<% end %>