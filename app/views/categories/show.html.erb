<p>
  <strong>Category Name:</strong>
  <%= @category.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<button><%= link_to '+ Create New Task', new_category_task_path(category_id: @category.id) %></button>

<% @included_tasks = Task.where(category_id: @category.id)%>

<% if @included_tasks.length > 0%>
  <h3>Tasks under <%=@category.name%></h3>
  <table>
      <thead>
          <tr>
              
              <th>Name</th>
              <th>Description</th>
              <th>Owner</th>
              <th>Deadline</th>
              <th>Started</th>
              <th>Completed</th>
              <th>Date Created</th>
              <th colspan="3">options</th>
          </tr>
      </thead>
      <tbody>
          <% @categories = Category.all %>
          <% @users = User.all %>
          <% @included_tasks.each do |task| %>
              <tr>
                  
                  <td><%= task.name %></td>
                  <td><%= task.description %></td>
                  <td><%= @users.find_by(id: task.user_id).email %></td>
                  <td><%= task.deadline %></td>
                  <td><%= task.started ? 'yes' : 'no' %></td>
                  <td><%= task.completed ? 'yes' : 'no' %></td>
                  <td><%= task.created_at %></td>

                  <td><%= link_to 'Show', category_task_path(task, :category_id => @category.id) %></td>
                  <td><%= link_to 'Edit', edit_category_task_path(task, :category_id => @category.id, :id => task.id) %></td>
                  <td><%= link_to 'Delete', category_task_path(task, :category_id => @category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
  </table>
<% else %>
  <h3>There are no tasks under this category yet.</h3>
<% end %>

<br />
<%= link_to 'Back to categories', categories_path %>